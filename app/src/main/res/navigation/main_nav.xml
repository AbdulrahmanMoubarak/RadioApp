<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/radioSplashFragment">
    <fragment
        android:id="@+id/radioSplashFragment"
        android:name="com.training.radioapptrial.channelsGetViewPlay.ui.RadioSplashFragment"
        android:label="fragment_radio_splash"
        tools:layout="@layout/fragment_radio_splash" >
        <action
            android:id="@+id/action_radioSplashFragment_to_fragmentRadioChannels"
            app:destination="@id/fragmentRadioChannels"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popUpTo="@id/radioSplashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/fragmentRadioChannels"
        android:name="com.training.radioapptrial.channelsGetViewPlay.ui.FragmentRadioChannels"
        android:label="fragment_radio_channels"
        tools:layout="@layout/fragment_radio_channels" >
        <action
            android:id="@+id/action_fragmentRadioChannels_to_channelDetailFragment"
            app:destination="@id/channelDetailFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/channelDetailFragment"
        android:name="com.training.radioapptrial.detailedmediaplayer.ui.ChannelDetailFragment"
        android:label="fragment_channel_detail"
        tools:layout="@layout/fragment_channel_detail" />
</navigation>