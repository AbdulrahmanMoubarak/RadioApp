<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/resize"
        android:layout_width="50dp"
        android:layout_margin="10dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_fullscreen_exit_svgrepo_com"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewDetailedSound"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:background="@drawable/rounded_img"
        android:src="@drawable/ic_radio_svgrepo_com"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resize" />

    <TextView
        android:scrollHorizontally="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:id="@+id/detail_channelName"
        android:textColor="@color/white"
        android:layout_margin="20dp"
        android:maxWidth="200dp"
        android:ellipsize="marquee"
        android:singleLine="true"
        style="@style/TextAppearance.MaterialComponents.Headline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/detail_channelName_txt"
        app:layout_constraintTop_toBottomOf="@+id/imageViewDetailedSound" />

    <TextView
        android:id="@+id/detail_channelName_txt"
        android:textColor="@color/white"
        android:layout_margin="20dp"
        android:maxWidth="400dp"
        style="@style/TextAppearance.MaterialComponents.Headline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Channel:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewDetailedSound" />

    <TextView
        android:scrollHorizontally="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:id="@+id/detail_genre"
        android:textColor="@color/white"
        android:layout_margin="20dp"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        android:ellipsize="marquee"
        app:layout_constraintStart_toEndOf="@id/detail_genre_txt"
        app:layout_constraintTop_toBottomOf="@+id/detail_channelName" />

    <TextView
        android:id="@+id/detail_genre_txt"
        android:textColor="@color/white"
        android:layout_margin="20dp"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genre: "
        android:maxWidth="400dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_channelName" />

    <TextView
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:id="@+id/detail_country"
        android:textColor="@color/white"
        android:layout_margin="20dp"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Country: "
        android:maxWidth="400dp"
        android:ellipsize="marquee"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_genre" />

    <ImageView
        android:id="@+id/detail_buttonPlayPause"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="70dp"
        android:src="@drawable/ic_play_detail_svgrepo_com"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_country" />

</androidx.constraintlayout.widget.ConstraintLayout>