<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.training.radioapptrial"
    tools:ignore="LockedOrientationActivity">


    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".application.MainApplication"
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:icon="@drawable/ic_radio_svgrepo_com"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RadioAppTrial">

        <service android:name=".radioforegroundservice.service.RadioService"
            android:enabled="true"
            android:exported="true"/>

        <service android:name=".channelrecorder.service.ChannelRecordingService"
            android:enabled="true"
            android:exported="true"/>

        <receiver
            android:name=".channelrecorder.service.ChannelRecordBroadcastReciever"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="STOP_SERVICE"/>
                <action android:name="START_SERVICE"/>
            </intent-filter>
        </receiver>

        <receiver android:name=".channelrecorder.service.DeviceStateChangeBroadcastReciever"
            android:enabled="true"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <activity
            android:name=".channelsGetViewPlay.ui.MainActivity"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>